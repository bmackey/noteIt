<div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="forms">Sign Up</h1>
            </div>
          </div>
        </div>

<% provide(:title, 'Sign up') %>

<div class="row">
          <div class="col-lg-6">
            <div class="well">
              <form class="bs-example form-horizontal">
                <fieldset>
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <div class="col-lg-10">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10">
      <%= f.label :name %>
      <%= f.text_field :fname %>
      </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10">

      <%= f.label :surname %>
      <%= f.text_field :lname %>
      </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10">

      <%= f.label :course_id, "Select your Course" %>
      <%= f.collection_select :course_id, Course.all, :course_id, :name %>
      </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10">
      <%= f.label :email %>
      <%= f.text_field :email %>
      </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10">
      <%= f.label :password %>
      <%= f.password_field :password %>
      </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10">
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      </div>
      </div>
      <%= f.submit "Create my account", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
